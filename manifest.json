{
  "manifest_version": 2,
  "name": "Mindfully",
  "version": "1.0",

  "description": "A tool to browse the web mindfully.",

  "icons": {
    "48": "icons/mindful.png"
  },
   "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "idle"
    ],
  "background": {
    "scripts": [
        "format-time.js",
        "new-day.js",
        "ticker-timer-modes.js",
        "tracking-events.js",
        "main.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/mindful.png",
    "default_title": "Mindfully",
    "default_popup": "popup/mindfully.html"
  }


}
